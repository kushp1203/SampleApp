<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_label"
        android:textColor="#FF0000"
        android:backgroundTint="#FF8834"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
       android:id="@+id/actionButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_label"
        android:layout_below="@id/actionButton"
        android:layout_alignRight="@id/actionButton"
        android:id="@+id/actionText"
        android:textSize="40sp"
        android:visibility="invisible"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK ME FOR A SURPRISE!"
        android:textColor="#6a47cc"
        android:layout_below="@id/actionButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/actionButtontTwo"

        />
</android.widget.RelativeLayout>